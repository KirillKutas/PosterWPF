<UserControl x:Class="PosterWPF.Sections.ConcertsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosterWPF.Sections"
             mc:Ignorable="d" 
              d:DesignHeight="716" d:DesignWidth="494" x:Name="MainConcertsPage" Loaded="MainConcertsPage_Loaded">
    <Grid x:Name="ConcertsPage1" Background="White">
        <StackPanel x:Name="TopStack" Height="85" HorizontalAlignment="Left" VerticalAlignment="Top" Width="494" ScrollViewer.CanContentScroll="False" CanVerticallyScroll="False">
            <StackPanel Orientation="Horizontal" Height="54">
                <Button x:Name="Concerts" BorderThickness="0,0,1,3" Content="Concerts" Width="247" FontFamily="Times New Roman" FontSize="24" Background="White" BorderBrush="#FFA02525" Click="Concerts_Click" Style="{DynamicResource ButtonsStyle1}"/>
                <Button x:Name="ConcertHalls" BorderThickness="1,0,0,0" Content="Concert halls" Width="247" FontFamily="Times New Roman" FontSize="24" Background="White" BorderBrush="#FFA02525" Click="ConcertHalls_Click" Style="{DynamicResource ButtonsStyle1}"/>
            </StackPanel>
            <Border Height="30" Background="WhiteSmoke" >
                <Label x:Name="Date" Content="Date" FontSize="15"/>
            </Border>

        </StackPanel>
        <Grid x:Name="Output" Margin="0,86,0,0">

        </Grid>
    </Grid>
</UserControl>
