<UserControl x:Class="PosterWPF.Sections.SignInForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosterWPF.Sections"
             mc:Ignorable="d" 
             d:DesignHeight="716" d:DesignWidth="494" x:Name="MainSignInForm" Loaded="MainSignInForm_Loaded">
    <Grid Background="white">
        <Label HorizontalAlignment="Center" FontSize="26" FontFamily="Times New Roman" Content="Sign in" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <TextBox GotFocus="LoginOrEmail_GotFocus" LostFocus="LoginOrEmail_LostFocus" x:Name="LoginOrEmail" HorizontalAlignment="Center" Height="30" Margin="0,80,0,0" Foreground="Gainsboro" FontSize="18" TextWrapping="Wrap" Text="Login or E-mail" VerticalAlignment="Top" Width="200"/>
        <PasswordBox x:Name="UserPassword" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Height="30" Width="200" />
        <Button Click="SignInButton_Click" x:Name="SignInButton" Style="{DynamicResource SignInStyle}" Height="30" Width="200" Background="White" BorderThickness="0,0,0,2" FontSize="18" Content="Sign In" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" />

    </Grid>
</UserControl>
