<UserControl x:Name="CalendarPage2" x:Class="PosterWPF.Sections.CalendarPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PosterWPF.Sections"
             mc:Ignorable="d" Background="#FFA02525" Height="254" Width="278" Loaded="CalendarPage2_Loaded">
    <Grid x:Name="CalendarPage1" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>
        <Calendar x:Name="ChangeDate" HorizontalAlignment="Left" VerticalAlignment="Top" Height="254" Width="278" Style="{DynamicResource CalendarStyle1}" Margin="0,10,0,-10" FontFamily="Times New Roman" BorderBrush="White" Background="White" OpacityMask="White" Grid.ColumnSpan="2" SelectedDatesChanged="ChangeDate_SelectedDatesChanged"/>
    </Grid>
</UserControl>
